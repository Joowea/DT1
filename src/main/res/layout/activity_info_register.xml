<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1">
    <EditText
        android:id="@+id/et_reAccount"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="输入注册账号"
        tools:layout_editor_absoluteY="60dp"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/et_rePassword"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="输入登录密码"
        tools:layout_editor_absoluteY="100dp"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/et_rePasswordAgain"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="再次输入密码"
        tools:layout_editor_absoluteY="140dp"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/et_reName"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="输入注册姓名"
        tools:layout_editor_absoluteY="200dp"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/et_reIdNumb"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="身份证件号码"
        tools:layout_editor_absoluteY="240dp"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/et_rePhone"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="输入联系电话"
        tools:layout_editor_absoluteY="280dp"
        tools:layout_editor_absoluteX="8dp" />
    <EditText
        android:id="@+id/et_reEmail"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="输入电子邮箱"
        tools:layout_editor_absoluteY="280dp"
        tools:layout_editor_absoluteX="8dp" />

    <!-- 用来显示报文返回结果 -->
    <TextView
        android:id="@+id/tv_reResult"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="349dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.45"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="390dp">

        <Button
            android:id="@+id/btn_register_up"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:text="Register" />

        <Button
            android:id="@+id/btn_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return"
            android:layout_gravity="right"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>




</LinearLayout>

